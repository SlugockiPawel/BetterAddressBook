@model IEnumerable<CategoryModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5">
    <div class="col-12 text-end mb-2">
        <a class="btn btn-primary rounded-pill" asp-action="Create">Create New</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th colspan="2">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="me-3 editIcons">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-action="EmailCategory" asp-route-id="@item.Id" class="me-3 editIcons">
                            <i class="bi bi-envelope-fill"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="me-3 text-danger editIcons">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
    <script>
    let message = '@(ViewBag.SwalMessage)';

    if (message.includes("Success") && message !== '' )
    {
    swal.fire({
    backdrop: false,
    icon: 'success',
    title: message,
    showConfirmButton: true
    })
    } else if (message.includes("Error")) {
    swal.fire({
    backdrop: false,
    icon: 'error',
    title: 'Oops...',
    text: message
    })
    }
    </script>
}